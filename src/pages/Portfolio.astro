---
import Header from "../components/Header.astro";
import BaseHead from"../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header isLandingPage={false} BGColor="PWWhite" color='PWBlack'></Header>
        <main>
            <!-- Title and search bar -->
            <div class="flex flex-col items-center">
                <h1 class="font-notoSerifDisplay text-7xl font-black">Karan Swansi's Blog</h1>
                <h3 class="font-notoSerif text-xl font-medium mt-5">Looking For Something?</h3>
                <!-- search bar -->
                <div class="mt-3">
                    <input class="shadow appearance-non border rounded"> 
                        
                    </input>
                <div>
            </div>

            <!-- Featured -->
            <div>

            </div>
        </main>
    </body>
</html>